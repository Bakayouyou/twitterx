<div class="border-t border-gray-200 p-4">
  <div class="flex items-start w-full mb-1.5">
    <%= render(AvatarComponent.new(user: tweet.user)) %>
    <div class="ml-2.5 text-sm">
      <div class="space-x-3">
        <span class="font-semibold text-gray-900"><%= tweet.user.name %></span>
        <span class="text-gray-500">@<%= tweet.user.username %></span>
        <span class="text-gray-500"><%= time_ago_in_words tweet.created_at %></span>
      </div>
      <div class="text-gray-800 mt-0.5">
        <%= simple_format tweet.body %>
      </div>
      <div class="mt-3 flex items-center justify-between text-gray-400 max-w-xs">
        <%= render(LikeComponent.new(tweet: tweet)) %>
      </div>
    </div>
  </div>
</div>
