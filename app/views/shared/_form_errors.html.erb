<% if resource.errors.any? %>
  <div id="error_explanation" class="text-red-800 px-4 py-3 bg-red-100 rounded-md mb-5">
    <h2 class="font-bold text-lg mb-2">
       There are <%= pluralize(resource.errors.count, "error") %> with this form:
    </h2>
    <ul class="list-disc list-inside text-sm">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
